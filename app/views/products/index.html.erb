<%= render 'layouts/header' %>

<div class="jumbotron top-img">
  <p class="text-center text-white top-img-text">Techpit Clothes</p>
</div>

<div class="container">
  <div class="top__title text-center">
    All Products
  </div>
  <div class="row">
  <%# HINT:  @products.each_slice(2) do |product1, product2| みたいにコードを弄ってみて、見た目を変えるとかを試してみると、学びが深まる %>
    <% @products.each do |product| %>
      <%= link_to product_path(product), class: "col-lg-4 col-md-6" do %>
        <div class="card">
          <%= image_tag product.image, class: "card-img" %>
          <div class="card-body">
            <p class="card-title">
              <%= product.name %>
            </p>
            <p class="card-text">
              ¥<%= number_to_delimited(product.price) %>
            </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
